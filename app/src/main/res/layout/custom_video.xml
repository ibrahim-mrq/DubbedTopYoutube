<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorWhite"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/customVideo_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/customVideo_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/customVideo_image"
            android:layout_alignBottom="@+id/customVideo_image"
            android:layout_margin="5dp"
            android:background="@color/colorBlack"
            android:padding="3dp"
            android:text="15:10"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/customVideo_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customVideo_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:text="Imagine Dragons - Follow You مترجمة عربي" />

        <TextView
            android:id="@+id/customVideo_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customVideo_tv_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="viewEnd"
            tools:ignore="HardcodedText"
            tools:text="قبل 5 ايام" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>